<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/gempa_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:minHeight="72dp"
    android:orientation="horizontal"
    android:paddingTop="6dp"
    android:paddingLeft="8dp"
    android:paddingRight="8dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tanggal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:textColor="@color/colorBlack"
            android:textSize="15dp"
            android:text="09/01/2017"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/waktu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:textColor="@color/colorBlack"
            android:textSize="12dp"
            android:text="18:28:35 WIB"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/circle_image"
                    android:layout_width="21dp"
                    android:layout_height="21dp"
                    android:layout_centerInParent="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_filled_circle"
                    android:tint="@color/colorAccent"
                    />

                <View
                    android:layout_marginTop="6dp"
                    android:layout_width="2dp"
                    android:layout_gravity="center"
                    android:layout_height="150dp"
                    android:background="#d6d6d6" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginLeft="10dp">

                <TextView
                    android:id="@+id/magnitude"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gempa Bumi 5.0 Skala Richter"
                    android:textSize="17dp"
                    android:textStyle="bold"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="7dp"
                    android:layout_marginTop="7dp"
                    android:layout_marginBottom="7dp"
                    android:background="#d6d6d6">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_centerInParent="true"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_map_marker_point"
                        android:id="@+id/marker_image"
                        android:tint="#3d4563"/>

                <TextView
                    android:id="@+id/longlat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#3d4563"
                    android:textStyle="bold"
                    android:layout_marginLeft="7dp"
                    android:text="-1.69 - 100.31"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/wilayah"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorGreyLight"
                    android:text="64 km BaratLaut PESISIRSELATAN-SUMBAR"/>

                <TextView
                    android:id="@+id/kedalaman"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="16dp"
                    android:textColor="@color/colorGreyLight"
                    android:text="Kedalaman: 17 Km"/>

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>


</LinearLayout>